import tkinter  as Tk
from PIL import Image,ImageTk

# public function cadastraconta(kgasto,dtleitura)
janela = Tk.Tk()
janela.state('zoomed')
janela.title("Teste Principal")

janela.grid_columnconfigure(1,minsize=2)
janela.grid_rowconfigure(0,minsize=100)
titulo = Tk.Label(text="TESTE TITULO",fg="white",bg="#000000",width=230,height=5)
titulo.grid(row=0,column=0,columnspan=4)
def comida():
    comidas = Tk.Toplevel()
    comidas.state('zoomed')
    comidas.title("Comida")
    titulo = Tk.Label (comidas,text="TESTE COMIDA",fg="black",bg="#FFFF00",width=230,height=5).grid(row=0,column=0,columnspan=4)
    tkimagemc0 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc0).grid(row=1,column=0)
    #
    tkimagemc1 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc1).grid(row=1,column=1)
    #
    tkimagemc2 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc2).grid(row=1,column=2)
    #
    tkimagemc3 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc3).grid(row=1,column=3)
    #
    tkimagemc4 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc4).grid(row=5,column=0)
    #
    tkimagemc5 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc5).grid(row=5,column=1)
    #
    tkimagemc6 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc6).grid(row=5,column=2)
    #
    tkimagemc7 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(comidas,image=tkimagemc7).grid(row=5,column=3)
    botao_fechar =Tk.Button(comidas,text="Voltar",command=comidas.destroy).grid(row=7,column=0,columnspan=4,sticky='NSEW')
    comidas.mainloop()
seila = []
print(seila)
def objeto():
    obj = Tk.Toplevel()
    obj.state('zoomed')
    obj.title("Comida")
    titulo = Tk.Label (obj,text="TESTE OBJETO",fg="white",bg="#990000",width=230,height=5).grid(row=0,column=0,columnspan=4)
    tkimagemob0 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(obj,image=tkimagemob0).grid(row=1,column=0)
    nomeob0 =Tk.Label(obj,text="Bolinha Pula-Pula(1 unidade)")
    nomeob0.grid(row=2,column=0)
    seila.append(nomeob0)
    precoob0 = Tk.Label(obj,text="R$ 2,00")
    precoob0.grid(row=3,column=0)
    compraob0 =Tk.Button(obj,text="Comprar")
    compraob0.grid(row=4,column=0)
    #
    tkimagemob1 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(obj,image=tkimagemob1).grid(row=1,column=1)
    #
    tkimagemob2 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(obj,image=tkimagemob2).grid(row=1,column=2)
    #
    tkimagemob3 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(obj,image=tkimagemob3).grid(row=1,column=3)
    #
    tkimagemob4 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(obj,image=tkimagemob4).grid(row=5,column=0)
    #
    tkimagemob5 = ImageTk.PhotoImage(Image.open("teste image.jpg))
    Tk.Label(obj,image=tkimagemob5).grid(row=5,column=1)
    #
    tkimagemob6 = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(obj,image=tkimagemob6).grid(row=5,column=2)
    #
    tkimagemob7= ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(obj,image=tkimagemob7).grid(row=5,column=3)
    botao_fechar =Tk.Button(obj,text="Voltar",command=obj.destroy,height=2).grid(row=7,column=0,columnspan=4,sticky="NSEW")
    obj.mainloop()
def bebida():
    bb = Tk.Toplevel()
    bb.state('zoomed')
    bb.title("Comida")
    titulo = Tk.Label (bb,text="TESTE BEBIDAS",fg="white",bg="#448811",width=230,height=5).grid(row=0,column=0)
    tkimagem = ImageTk.PhotoImage(Image.open("teste image.jpg"))
    Tk.Label(bb,image=tkimagem).grid(row=1,column=0)
    botao_fechar =Tk.Button(bb,text="Voltar",command=bb.destroy).grid(row=2,column=0)
    bb.mainloop()
